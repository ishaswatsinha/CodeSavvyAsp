@{
    ViewData["Title"] = "Wishlist";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<style>
    .wishlist-container {
        max-width: 900px;
        margin: auto;
        padding: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .course-item {
        display: flex;
        align-items: center;
        border-bottom: 1px solid #ddd;
        padding: 15px 0;
    }

        .course-item img {
            width: 120px;
            height: 80px;
            border-radius: 5px;
        }

    .course-details {
        flex: 1;
        margin-left: 15px;
    }

    .remove-btn {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        cursor: pointer;
    }

    .price {
        font-size: 18px;
        font-weight: bold;
        color: #f39c12;
        margin-right: 10px;
    }

    .summary-card {
        background: #000;
        color: white;
        padding: 15px;
        border-radius: 10px;
        text-align: center;
    }

    .buy-now {
        background: gold;
        border: none;
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        width: 100%;
        border-radius: 5px;
    }
</style>

<div class="wishlist-container">
    <h3 class="mb-4">My Wishlist</h3>

    <div class="course-item">
        <img src="/images/programming-background-with-person-working-with-codes-computer.jpg" alt="Course Image">
        <div class="course-details">
            <a href="#" class="text-decoration-none text-dark fw-bold">The Complete Python Bootcamp</a>
            <p class="mb-1">4.5 ⭐⭐⭐⭐⭐ (Review Count)</p>
            <p>Total Courses • Lesson • Beginner</p>
        </div>
        <p class="price">Rs. 1,700</p>
        <button class="remove-btn">🗑 Remove</button>
    </div>

    <div class="course-item">
        <img src="/images/programming-background-with-person-working-with-codes-computer.jpg" alt="Course Image">
        <div class="course-details">
            <a href="#" class="text-decoration-none text-dark fw-bold">Advanced Java Programming</a>
            <p class="mb-1">4.8 ⭐⭐⭐⭐⭐ (Review Count)</p>
            <p>Total Courses • Lesson • Intermediate</p>
        </div>
        <p class="price">Rs. 2,100</p>
        <button class="remove-btn">🗑 Remove</button>
    </div>

    <div class="course-item">
        <img src="/images/programming-background-with-person-working-with-codes-computer.jpg" alt="Course Image">
        <div class="course-details">
            <a href="#" class="text-decoration-none text-dark fw-bold">Web Development Mastery</a>
            <p class="mb-1">4.6 ⭐⭐⭐⭐⭐ (Review Count)</p>
            <p>Total Courses • Lesson • Beginner</p>
        </div>
        <p class="price">Rs. 2,000</p>
        <button class="remove-btn">🗑 Remove</button>
    </div>

    <div class="summary-card mt-4">
        <p>Total:</p>
        <h4>Rs. 4,500</h4>
        <p style="text-decoration: line-through; color: gray;">Rs. 5,560</p>
        <button class="buy-now">Buy Now</button>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let removeButtons = document.querySelectorAll(".remove-btn");

            removeButtons.forEach(button => {
                button.addEventListener("click", function () {
                    this.closest(".course-item").remove();
                });
            });

            let buyNowButton = document.querySelector(".buy-now");

            buyNowButton.addEventListener("click", function () {
                alert("Redirecting to payment page...");
                window.location.href = "payment.cshtml"; // Replace with actual payment URL
            });
        });
    </script>
}

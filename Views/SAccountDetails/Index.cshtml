@model CodeSavvyAsp.Models.Student

@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h2 class="mb-4">My Profile</h2>

<!-- Profile Card -->
<div class="card p-3 mb-3 shadow">
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <img src="/images/default-user.png" class="rounded-circle me-3" alt="User" height="60px" width="60px">
            <div>
                <h5 class="mb-0">@Model.FirstName @Model.LastName</h5>
                <p class="text-muted mb-0">@Model.Email</p>
            </div>
        </div>
        <a asp-controller="SAccountDetails" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">
            ✏️ Edit
        </a>
    </div>
</div>

<!-- Personal Details Card -->
<div class="card p-3 shadow">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h5>Personal Details</h5>
            <p>First Name: <strong>@Model.FirstName</strong></p>
            <p>Last Name: <strong>@Model.LastName</strong></p>
            <p>Email: <strong>@Model.Email</strong></p>
            <p>Phone: <strong>(+@Model.CountryCode) @Model.PhoneNumber</strong></p>
        </div>
        <a asp-controller="SAccountDetails" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">
            ✏️ Edit
        </a>
    </div>
</div>

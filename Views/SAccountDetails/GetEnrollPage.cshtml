@model CodeSavvyAsp.Models.InstructorCourse

@{
    Layout = null;
    ViewData["Title"] = "Confirm Enrollment";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Confirm Enrollment</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 50px;
        }

        .container {
            max-width: 500px;
            margin: auto;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 8px;
        }

        .success {
            color: green;
        }

        .error {
            color: red;
        }

        .btn {
            display: block;
            width: 100%;
            padding: 10px;
            margin-top: 15px;
            text-decoration: none;
            color: white;
            font-weight: bold;
        }

        .btn-success {
            background-color: green;
        }

        .btn-warning {
            background-color: orange;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>📌 Confirm Enrollment</h1>

        <img src="@Model.ImageUrl" class="card-img-top mb-3" alt="Course Image" style="height: 200px; object-fit: cover;" />

        <h3>@Model.Title</h3>
        <p class="text-muted">@Model.Description</p>
        <p><strong>🕒 Duration:</strong> @Model.Duration</p>
        <p><strong>💰 Price:</strong> ₹@Model.Price</p>

        @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
        {
            <h3 class="error">@TempData["ErrorMessage"]</h3>
            <a href="@Url.Action("BuyNow", "SAcountDetails")" class="btn btn-warning">🔄 Try Again</a>
        }
        else
        {
            <form action="@Url.Action("EnrollNow", "SAcountDetails")" method="post">
                <input type="hidden" name="courseId" value="@Model.Id" />
                <button type="submit" class="btn btn-success">✅ Confirm Enrollment</button>
            </form>
        }
    </div>

</body>
</html>

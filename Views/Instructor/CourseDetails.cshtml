@{
    Layout = null;
    ViewData["Title"] = "Course Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Model.Title - Course Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            text-align: center;
            padding: 50px;
            background-color: #f4f6f9;
        }

        .container {
            max-width: 750px;
            margin: auto;
            box-shadow: 0px 5px 18px rgba(0, 0, 0, 0.15);
            padding: 35px;
            border-radius: 12px;
            background-color: white;
            transition: transform 0.3s ease-in-out;
        }

            .container:hover {
                transform: scale(1.02);
            }

        .course-image {
            width: 100%;
            height: 270px;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

            .course-image:hover {
                transform: scale(1.05);
            }

        .details {
            text-align: left;
            margin-top: 20px;
            font-size: 17px;
            line-height: 1.6;
        }

        .status-message {
            font-size: 19px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .success {
            color: #28a745;
        }

        .error {
            color: #dc3545;
        }

        .info {
            color: #007bff;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 30px;
        }

        .btn-lg {
            flex: 1;
            font-size: 18px;
            padding: 14px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.15);
            transition: all 0.3s ease-in-out;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.05);
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>📖 @Model.Title</h1>

        <img src="@Model.ImageUrl" alt="Course Image" class="course-image">

        <div class="details">
            <p><strong>📄 Description:</strong> @Model.Description</p>
            <p><strong>🕒 Duration:</strong> @Model.Duration</p>
            <p><strong>💰 Price:</strong> ₹@Model.Price</p>

            @if (!string.IsNullOrEmpty(Model.VideoUrl))
            {
                <p><strong>🎥 Video Preview Available</strong></p>
            }
            else
            {
                <p class="error">❌ No Video Available</p>
            }
        </div>

        <div class="btn-container">
            <a href="@Url.Action("BuyNow", "SAccountDetails")" class="btn btn-primary btn-lg">🎥 Watch Preview</a>

            <form action="@Url.Action("EnrollNow", "SAccountDetails")" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="courseId" value="@Model.Id" />
                <button type="submit" class="btn btn-success btn-lg">✅ Enroll Now</button>
            </form>
        </div>

    </div>

</body>
</html>

@model CodeSavvyAsp.Models.InstructorCourse
@{
    ViewData["Title"] = "DeleteCourseConfirmed";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Confirm Deletion</h2>
<p>Are you sure you want to delete the course: <strong>@Model.Title</strong>?</p>

<form asp-action="DeleteCourseConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="MyCourses" class="btn btn-secondary">Cancel</a>
</form>




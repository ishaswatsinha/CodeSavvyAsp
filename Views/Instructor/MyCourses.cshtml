@model List<CodeSavvyAsp.Models.InstructorCourse>

@{
    ViewData["Title"] = "My Courses";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Price</th>
                <th>Video</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td>@course.Duration</td>
                    <td>@course.Price.ToString("C")</td>


                    <td>
                       
                        <a asp-action="DeleteCourse" asp-route-id="@course.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">You have not added any courses yet.</p>
}

<a asp-action="AddCourse" class="btn btn-primary">Add New Course</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

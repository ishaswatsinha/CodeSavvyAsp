@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CodeSavvy | Student</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f9f6e6;
            color: black;
        }

        .sidebar {
            width: 250px;
            background-color: #f9f6e6;
        }

            .sidebar h3 {
                color: #333;
            }

            .sidebar .nav-link {
                color: #333;
                font-weight: 500;
            }

                .sidebar .nav-link:hover {
                    background-color: #f7e39c;
                    border-radius: 5px;
                }

        .main-content {
            background-color: #fff;
        }
    </style>
</head>
<body>

    <div class="d-flex" style="min-height: 100vh;">
        <!-- Sidebar -->
        <div class="sidebar p-3">
            <h3 class="mb-3">Student Panel</h3>
            <hr style="border-color: #d4af37;" />
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="SAccountDetails" asp-action="Index">
                        <i class="fas fa-user"></i> Account Details
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="SAccountDetails" asp-action="EnrolledCourses">
                        <i class="fas fa-book"></i> Enrolled Courses
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="SAccountDetails" asp-action="Wishlist">
                        <i class="fas fa-heart"></i> Wishlist
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="SAccountDetails" asp-action="Settings">
                        <i class="fas fa-cog"></i> Settings
                    </a>
                </li>
                <li class="nav-item mt-3">
                    <a class="nav-link text-danger" asp-controller="SAccountDetails" asp-action="Logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4 main-content">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>

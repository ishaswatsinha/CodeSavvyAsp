@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CodeSavvy</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f6e6;
            color: black;
            overflow-x: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #f9f6e6;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            padding: 20px;
            overflow-y: auto;
            box-shadow: 4px 0px 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

            .sidebar h3 {
                color: #333;
                font-weight: bold;
            }

            .sidebar .nav-link {
                color: #333;
                font-weight: 500;
                padding: 10px;
                display: block;
                border-radius: 5px;
                transition: background 0.3s ease-in-out;
            }

                .sidebar .nav-link:hover {
                    background-color: #f7e39c;
                }

                .sidebar .nav-link.active {
                    background-color: gold;
                    font-weight: bold;
                }

        .main-content {
            background-color: #fff;
            margin-left: 250px;
            padding: 20px;
            min-height: 100vh;
            overflow: hidden;
        }
    </style>
</head>
<body>

    <div class="d-flex" style="min-height: 100vh;">
        <!-- Sidebar -->
        <div class="sidebar p-3">
            <h3 class="mb-3">Instructor Panel</h3>  <!-- ✅ Heading properly placed -->
            <hr style="border-color: #d4af37;" />

            <a asp-controller="Instructor" asp-action="Index" class="nav-link active">
                <i class="fa fa-user me-2"></i> My Profile
            </a>

            <a asp-controller="Instructor" asp-action="MyCourses" class="nav-link">
                <i class="fa fa-book me-2"></i> My Courses
            </a>

            <a asp-controller="Instructor" asp-action="Index" class="nav-link">
                <i class="fa fa-cog me-2"></i> Settings
            </a>

            <a asp-controller="SLogin" asp-action="Login" class="nav-link text-danger">
                <i class="fa fa-sign-out-alt me-2"></i> Log Out
            </a>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4 main-content">
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>

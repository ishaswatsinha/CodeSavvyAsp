@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CodeSavvy</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fff;
        }

        .sidebar {
            width: 250px;
            background-color: #f9f6e6;
            height: 100vh;
            position: fixed;
            padding: 20px;
            overflow-y: auto;
        }

            .sidebar a {
                display: block;
                padding: 10px;
                text-decoration: none;
                color: black;
                margin-bottom: 5px;
                font-weight: 500;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    background-color: gold;
                    border-radius: 5px;
                }

        .content {
            margin-left: 270px;
            padding: 20px;
        }

        .edit-btn {
            background-color: gold;
            border: none;
            padding: 5px 15px;
            border-radius: 5px;
            color: black;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <a asp-controller="Instructor" asp-action="Index" class="active">
            <i class="fa fa-user me-2"></i> My Profile
        </a>

        <a asp-controller="Instructor" asp-action="MyCourses">
            <i class="fa fa-book me-2"></i> My Courses
        </a>

        <a asp-controller="Instructor" asp-action="Settings">
            <i class="fa fa-cog me-2"></i> Settings
        </a>

        <a asp-controller="SAcountDetails"  asp-action="Logout">
            <i class="fa fa-sign-out-alt me-2"></i> Log Out
        </a>
    </div>

    <!-- Main Content Area -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Render scripts if defined in the child view -->
    @RenderSection("Scripts", required: false)

</body>
</html>

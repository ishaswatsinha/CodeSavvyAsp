
@{
    ViewData["Title"] = "Contact";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>

    </style>

</head>

<body class="mb-0">
    <div class="container mt-5">
        <!-- Contact Form -->
        <div class="contact-container p-4">
            <h4><strong><span style="color: green;">Got a Idea?</span> We’ve got the skills. Let’s team up</strong></h4>
            <p>Tell us more about yourself and what you’re got in mind.</p>
            <form>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <input type="text" class="form-control" placeholder="Enter first name">
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control" placeholder="Enter last name">
                    </div>
                </div>
                <input type="email" class="form-control mb-3" placeholder="Enter email address">
                <input type="tel" class="form-control mb-3" placeholder="+91 12345 67890">
                <textarea class="form-control mb-3" placeholder="Enter your message" rows="4"></textarea>
                <button class="btn btn-warning w-100">Send Message</button>
            </form>
        </div>

        <!-- Reviews Section -->
        <div class="reviews-section text-center mt-5">
            <h5><em>Reviews from other learners</em></h5>
            <div class="row mt-4">
                <!-- Review 1 -->
                <div class="col-md-4 mb-3">
                    <div class="card text-white bg-dark shadow-sm">
                        <div class="card-body">
                            <h6 class="card-title">⭐ Cody Fisher</h6>
                            <p class="card-text">Completely an effective improvement in coding !</p>
                            <p class="text-warning">⭐⭐⭐⭐⭐</p>
                        </div>
                    </div>
                </div>
                <!-- Review 2 -->
                <div class="col-md-4 mb-3">
                    <div class="card text-white bg-dark shadow-sm">
                        <div class="card-body">
                            <h6 class="card-title">⭐ Esther Howard</h6>
                            <p class="card-text">Everything is top class. A great learning experience!</p>
                            <p class="text-warning">⭐⭐⭐⭐⭐</p>
                        </div>
                    </div>
                </div>
                <!-- Review 3 -->
                <div class="col-md-4 mb-3">
                    <div class="card text-white bg-dark shadow-sm">
                        <div class="card-body">
                            <h6 class="card-title">⭐ Eleanor Pena</h6>
                            <p class="card-text">Helped me boost my skills and land a better job!</p>
                            <p class="text-warning">⭐⭐⭐⭐⭐</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
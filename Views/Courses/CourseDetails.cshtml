@model CodeSavvyAsp.Models.Course

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Title</h1>

<div class="container">
    <p>@Model.Description</p>
    <p><strong>Instructor:</strong> @Model.Instructor</p>
    <p class="price">Rs. 1,200</p>

    <img src="/images/python-course.jpg" class="course-image">

    <!-- ✅ Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <!-- ✅ Direct Buy Now Button - No Login Required -->
    <form method="post" action="@Url.Action("PurchaseConfirmation", "Checkout")">
        <input type="hidden" name="courseId" value="@Model.Id" />
        <button type="submit" class="btn buy-btn">Buy Now</button>
    </form>

    <!-- ✅ Back to Courses Button -->
    <a href="@Url.Action("Course", "Courses")" class="btn btn-secondary">Back to Courses</a>
</div>

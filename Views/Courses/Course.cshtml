@model List<CodeSavvyAsp.Models.Course>

@{
    ViewData["Title"] = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Available Courses</h1>

<div class="container">
    @foreach (var course in Model)
    {
        <div class="card">
            <img src="/images/course-placeholder.jpg" alt="@course.Title">
            <h3>@course.Title</h3>
            <p>@course.Description</p>
            <p class="price">Price: Rs. 1,200</p>
            <a href="@Url.Action("CourseDetails", "Courses", new { id = course.Id })">
                <button class="btn btn-primary">View Course Details</button>
            </a>
        </div>
    }
</div>

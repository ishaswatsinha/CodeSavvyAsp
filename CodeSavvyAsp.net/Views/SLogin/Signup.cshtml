@{
    ViewData["Title"] = "Signup";
    Layout = "~/Views/Shared/_NavLayout.cshtml";
}

<body style="background:black;">
    <div style="display: flex; justify-content: center; align-items: center; gap: 50px;">
        <!-- Form -->
        <form asp-action="Signup" asp-controller="Slogin" method="post" style="width: 400px; background: rgba(0, 8, 20); padding: 20px; border-radius: 10px; border: 1px solid #D52D2D; color: white; box-shadow: 0 0 15px rgba(255, 255, 255, 0.2); position: relative; margin-top: 100px;">

            <!-- Toggle Switch -->
            <div style="display: flex; background: #161D29; border-radius: 25px; padding: 5px; width: 100%; margin-bottom: 15px;">
                <div id="student-tab" onclick="toggleUserType('student')" style="flex: 1; text-align: center; padding: 10px; background: #000814; border-radius: 20px; color: white; font-weight: bold; cursor: pointer;">Student</div>

                <!-- Instructor Button -->
                <div id="instructor-tab" onclick="redirectToInstructorPage()" style="flex: 1; text-align: center; padding: 10px; color: #b0b3b8; cursor: pointer;">Instructors</div>
            </div>

            <div>First Name*</div>
            <input name="FirstName" type="text" placeholder="Enter first name" style="width: 100%; padding: 10px; background: #161D29; border: 1px solid #444; color: white; border-radius: 5px; outline: none; margin: 5px 0 10px;">

            <div>Last Name*</div>
            <input name="LastName" type="text" placeholder="Enter last name" style="width: 100%; padding: 10px; background: #161D29; border: 1px solid #444; color: white; border-radius: 5px; outline: none; margin: 5px 0 10px;">

            <div>Email Address*</div>
            <input name="Email" type="email" placeholder="Enter email address" style="width: 100%; padding: 10px; background: #161D29; border: 1px solid #444; color: white; border-radius: 5px; outline: none; margin: 5px 0 10px;">

            <div>Phone Number*</div>
            <div style="display: flex; gap: 5px;">
                <input name="CountryCode" type="text" placeholder="+91" style="width: 30%; padding: 10px; background: #161D29; border: 1px solid #444; color: white; border-radius: 5px; outline: none;">
                <input name="PhoneNumber" type="text" placeholder="Enter phone number" style="width: 70%; padding: 10px; background: #161D29; border: 1px solid #444; color: white; border-radius: 5px; outline: none;">
            </div>

            <div>Enter Password*</div>
            <input name="Password" type="password" placeholder="Create password" style="width: 100%; padding: 10px; background: #161D29; border: 1px solid #444; color: white; border-radius: 5px; outline: none; margin: 5px 0 10px;">



            <!-- Forgot Password Link -->
            <div style="text-align: right; font-size: 14px; margin-bottom: 10px;">
                <a href="@Url.Action("Forgot", "SLogin")"
                   style="color: #ffcc00; cursor: pointer; text-decoration: none; font-weight: bold;">
                    Forgot Password?
                </a>
            </div>


            <!-- Create Account Button -->
            <button type="submit" style="width: 100%; padding: 10px; background: #ffcc00; font-size: 16px; font-weight: bold; border-radius: 5px; cursor: pointer; margin-top: 10px; text-align: center;">Create Account</button>
        </form>

        <!-- Animation -->
        <div id="animation-container" style=" height:100%; margin-left: 10px;">
            <iframe style="width:600px; height:600px;" src="https://lottie.host/embed/f91056f7-2366-443c-b691-d311c6efc0bf/RGUGo8vsvH.lottie"></iframe>
        </div>


    </div>

    <!-- Toggle Switch Script -->
    <script>
        function toggleUserType(type) {
            if (type === 'student') {
                document.getElementById('student-tab').style.background = '#000814';
                document.getElementById('student-tab').style.color = 'white';
                document.getElementById('instructor-tab').style.background = 'transparent';
                document.getElementById('instructor-tab').style.color = '#b0b3b8';
            }
        }

        function redirectToInstructorPage() {
            window.location.href = "@Url.Action("InstructorIndex", "InstructorLogin")"; // Redirect to the InstructorIndex action in the InstructorLogin controller
        }
    </script>
</body>


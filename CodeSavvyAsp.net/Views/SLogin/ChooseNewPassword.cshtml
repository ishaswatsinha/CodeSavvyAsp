
@{
    ViewData["Title"] = "ChooseNewPassword";
    Layout = "~/Views/Shared/_NavLayout.cshtml";
}

<body style="background:black;">
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <!-- Form -->
        <form asp-action="ChooseNewPassword" asp-controller="Slogin" method="post" style="width: 400px; background: rgba(0, 8, 20); padding: 20px; border-radius: 10px; border: 1px solid #D52D2D; color: white; box-shadow: 0 0 15px rgba(255, 255, 255, 0.2); position: relative;">

            <!-- Information Text -->
            <div style="margin-bottom: 15px;">
                <span style="font-size: 24px; font-weight: bold;">Choose New Password</span>
                <br>
                Almost Done.Enter your new Password and you are all set.
            </div>

            <!-- New Password -->
            <div>New Password*</div>
            <input name="NewPassword" type="password" placeholder="Enter new password" style="width: 100%; padding: 10px; background: #161D29; border: 1px solid #444; color: white; border-radius: 5px; outline: none; margin: 5px 0 10px;">

            <!-- Confirm New Password -->
            <div>Confirm New Password*</div>
            <input name="ConfirmNewPassword" type="password" placeholder="Confirm new password" style="width: 100%; padding: 10px; background: #161D29; border: 1px solid #444; color: white; border-radius: 5px; outline: none; margin: 5px 0 10px;">

            <!-- Submit Button -->
            <button type="submit" style="width: 100%; padding: 10px; background: #ffcc00; font-size: 16px; font-weight: bold; border-radius: 5px; cursor: pointer; margin-top: 10px; text-align: center;">Save Password</button>

            <div style="text-align: center; margin-top: 10px; font-size: 14px;">
                <a href="@Url.Action("Login", "Slogin")" style="color: #ffcc00; text-decoration: none; font-weight: bold;">Back to Login</a>
            </div>
        </form>
    </div>
</body>


